def question():
    rules=input("you need to answer every question by yes or on do you understand")
    if rules=="no":
        return print("try again")
    else:
        print("nest question")
    question1=input("are you hungry? ")
    if question1=="no":
        return print("than let's go for a walk ")
    else:
        print("next question")
    question2=input("Do you want to eat at restaurant ?")
    if question2 == "no":
        return print("come eat at my place ")
    else:
        print("next question")
    question3=input("Do you want to eat pizza ? ")
    if question3 == "no":
        return print("let's go eat a burger than  ")
    else:
        print("let's go eat a pizza")

question()
